<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scott.todolist.ToDoListActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/home_screen_gradient"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.285" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="112dp"
        android:layout_height="76dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="33dp"
        android:lineSpacingExtra="2sp"
        android:text="Hello, Scott."
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/categories"
        android:layout_width="346dp"
        android:layout_height="301dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:numColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.886" />

    <TextView
        android:id="@+id/tasksCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="13dp"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:lines="2"
        android:text="Created Tasks"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@+id/tasksCreated"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="135dp" />

    <TextView
        android:id="@+id/tasksCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        tools:layout_editor_absoluteX="244dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="122dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="76dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="122dp"
        android:lines="2"
        android:text="Tasks Completed"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tasksCompleted"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="250dp" />

    <Button
        android:id="@+id/newTask"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</android.support.constraint.ConstraintLayout>
